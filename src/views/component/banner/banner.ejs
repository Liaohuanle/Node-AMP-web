<section class='banner-container' id='home'>
  <img src='/act/assets/mobile-logo.png' class='mobile-logo'/>
  <div class='banner-content'>
    <img src='<%= bannerImgPC %>' class='banner-image banner-image-pc'/>
    <img src='<%= bannerImgMobile %>' class='banner-image banner-image-mobile'/>
    <a href='<%=langTransfor%>' class='lang-transfor-mobile'><%= langText %></a>
    <div class='countDown' id='bannerPanel'>
      <ul>
        <li class='days countDownItem'>
          <span> 00 </span>
          <%= JSON.parse(spanText).day %>
        </li>
        <li class='hours countDownItem'>
          <span> 00 </span>
           <%= JSON.parse(spanText).hour %>
        </li>
        <li class='minutes countDownItem'>
          <span> 00 </span>
           <%= JSON.parse(spanText).minute %>
        </li>
        <li class='seconds countDownItem'>
          <span> 00 </span>
           <%= JSON.parse(spanText).second %>
        </li>
      </ul>
    </div>
  </div>
</section>
<section class="m0 banner-mask">
  <video
    autoplay= "autoplay"
    poster="/act/assets/poster.jpeg"
    title="Big Buck Bunny"
    album="Blender"
    artist="Blender Foundation"
    layout="responsive"
    loop
    id='banner-video'
  >
    <source type="video/mp4" src="/act/assets/india_banner.mp4"></source>
  </video>
  <img src='/act/assets/mobel-banner-bg.png'/>
</section>