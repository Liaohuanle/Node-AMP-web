<section id='about' class='about-container overflow-y-hidden'>
  <div class='title-container'>
    <h1>  <%= JSON.parse(titleList).about %> </h1>
    <p>1 Million Audition x musical.ly Fest</p>
  </div>
  <div class='tab-container'>
    <ul>
      <% for(var i =0; i < aboutTagList.length; i++) { %>
        <li class="<%= i == currentStep ? 'active' : null %> subItem tab-item-text">#<%= aboutTagList[i] %></li>
      <%
        }
      %>
    </ul>
    <div class='slider'>
      <div class='tab-item mobile-layout'>
        <div class='tab-item-img-container float-left'>
          <img src='/act/assets/phone.png'/>
        </div>
        <div class='tab-item-img-container float-right'>
          <img src='/act/assets/about_tab_1.png' class='float-right m-t-lg width-84'/>
        </div>
      </div>
      <div class='tab-item'>
        <h1>CATEGORIES</h1>
        <div class='tab-item-img-container m-t-lg'>
          <img src='/act/assets/about_tab_2_1.png' class='img-160 m-t-sm tmanual-width'/>
          <img src='/act/assets/about_tab_2_2.png' class='img-160 m-t-sm tmanual-width'/>
          <img src='/act/assets/about_tab_2_3.png' class='img-160 m-t-sm tmanual-width'/>
          <img src='/act/assets/about_tab_2_4.png' class='img-160 m-t-sm tmanual-width'/>
          <img src='/act/assets/about_tab_2_5.png' class='img-160 m-t-sm tmanual-width'/>
        </div>
      </div>
      <div class='tab-item'>
        <div class='tab-item-img-container width-100'>
          <h1>PRIZE</h1>
          <img src='/act/assets/about_tab_3_prize.png' class='img-vw'/>
        </div>
      </div>
      <div class='tab-item'>
        <p> 
          Winner selection based on creator score,
          will announce the score after the end of each round.
        </p>
        <div class='round-container'>
          <div class='round-card'>
            <h2 class='line-height-55'>ROUND 01</h2>
            <p class='line-height-39'>Pick 1000+ from all participants</p>
          </div>
          <div class='round-card'>
            <h2 class='line-height-55'>ROUND 02</h2>
            <p class='line-height-39'>Pick Top 200 from 1000+ R1 winners</p>
          </div>
        </div>
        <p> 
          Also, Winners will be invited to Celebration Party
        </p>
        <p class='m-t-lg'> 
          <a href='javascript:void(0)' id='ruleClick' class='link'> Click for more details</a>
        </p>
      </div>
      <div class='tab-item'>
        <p>Final winners, see you in bombay!</p>
        <div class='countDown'>
          <ul>
            <li class='days countDownItem'>
              <span> 00 </span>
              <%= JSON.parse(spanText).day %>
            </li>
            <li class='hours countDownItem'>
              <span> 00 </span>
              <%= JSON.parse(spanText).hour %>
            </li>
            <li class='minutes countDownItem'>
              <span> 00 </span>
              <%= JSON.parse(spanText).minute %>
            </li>
            <li class='seconds countDownItem'>
              <span> 00 </span>
              <%= JSON.parse(spanText).second %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>