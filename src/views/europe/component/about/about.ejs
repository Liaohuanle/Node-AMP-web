<section id='about' class='about-section'>
  <div class="about-container">
    <div class='title-container'>
      <h1> About </h1>
      <p>1 Million Audition</p>
    </div>
    <section class="badge-container">
      <ul>
        <% for(var i =0; i < aboutObject.length; i++) { %>
          <li>
            <figure>
              <img src="<%=aboutObject[i].src%>"/>
            </figure>
            <p><%=aboutObject[i].title%></p>
          </li>
        <%
          }
        %>
      </ul>
    </section>
    <section class="tab-container">
      <ul>
        <li class="subItem tab-item-text">#ShareAndWinEU</li>
        <li class="subItem tab-item-text">Prize & Rules</li>
      </ul>
      <div class='slider'>
        <div class='tab-item mobile-layout'>
          <img src='<%=aboutContainerFile.phone%>' class="phone"/>
          <img src='<%=aboutContainerFile.description%>' class="description"/>
        </div>
        <div class='tab-item prize-layout'>
          <% for(var i in prizeList) { %>
            <div class="prize-item">
              <div class="title-area">
                <h2>
                  <%=prizeList[i].title%>
                </h2>
                <span>
                  <%=prizeList[i].subtitle%>
                </span>
              </div>
              <div class="desc-area">
                <% for(var j =0; j < prizeList[i].desc.length; j++) { %>
                  <span> <%=prizeList[i].desc[j]%> </span>
                <%}%>
              </div>
              <figure>
                <img src="<%=prizeList[i].src%>"/>
              </figure>
            </div>
          <%
            }
          %>
          <p>
            Rules:Winner selection is based on creator score. <a href="#">Check out the rules here.</a>
          </p>
        </div>
      </div>
    </section>
  </div>
</section>